<h2>Novo Chamado</h2>

<form asp-action="Criar">
    <div class="form-group">
        <label asp-for="Nome">Nome</label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Solicitacao">Solicitação</label>
        <textarea asp-for="Solicitacao" class="form-control"></textarea>
        <span asp-validation-for="Solicitacao" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Responsavel">Responsável</label>
        <input asp-for="Responsavel" class="form-control" />
        <span asp-validation-for="Responsavel" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-outline-warning" data-mdb-ripple-init data-mdb-riplle-color=”dark”>Criar Chamado</button>
</form>