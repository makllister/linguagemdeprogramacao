@model List<Chamados.Models.Chamado>


<a asp-action="Novo" class="btn btn-outline-dark btn-rounded" data-mdb-ripple-init data-mdb-ripple-color="dark">NOVO CHAMADO</a>

@if (Model != null)
{
    <table class="table table-striped table-bordered">

        <thead>
            <tr>
                <th>Id</th>
                <th>Solicitante</th>
                <th>Status</th>
                <th>Responsavel</th>
                <th>Inicio</th>
                <th>Termino</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var chamado in Model)
            {
                <tr>
                    <td>@chamado.Id</td>
                    <td>@chamado.Nome</td>
                    <td>@chamado.Status</td>
                    <td>@chamado.Responsavel</td>
                    <td>@chamado.Inicio</td>
                    <td>@chamado.Termino</td>
                    <td>
                        <a asp-action="Detalhes" asp-route-id="@chamado.Id" class="btn btn-primary">+</a>
                        <a asp-action="Detalhes" asp-route-id="@chamado.Id" class="btn btn-primary">x</a>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Sem registros no sistema</p>
}
